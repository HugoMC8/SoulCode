programa {
	funcao inicio() {
		inteiro n1, n2, soma, multi
		
		escreva("Digite o primeiro numero ")
		leia(n1)
		escreva("Digite o segundo numero ")
		leia(n2)
		
		soma = n1 + n2
		multi = n1 * n2
		
		escreva("A soma dos numeros digitados é: " + soma)
		escreva(" A multiplicacao dos numeros digitados é " + multi)
	}
}
